{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            // Generate once and it will watch and compile automatically if there is any change.
            "taskName": "tsc-watch",
            "command": "tsc",
            "type": "shell",
            "args": [
                "-w", "-p", "."
            ],
            "showOutput":"silent",
            "isBackground": true,
            "problemMatcher":"$tsc-watch"
        }
    ]
}